{#
  Base template - all other templates extend this
  This provides the HTML structure for the entire site
#}
<!DOCTYPE html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {{ wp_head() }}
</head>

<body class="{{ body_class }}">

    {# Header #}
    <header class="site-header">
        <div class="site-container">
            <h1>
                <a href="{{ site.url }}">{{ site.name }}</a>
            </h1>
            <p class="site-description">{{ site_tagline }}</p>

            {# Navigation Menu #}
            {% if menu %}
                <nav class="nav-primary">
                    <ul class="nav-menu">
                        {% for item in menu.items %}
                            <li class="nav-item">
                                <a href="{{ item.link }}" class="{{ item.classes|join(' ') }}">
                                    {{ item.title }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            {% endif %}
        </div>
    </header>

    {# Main Content #}
    <main class="site-main">
        <div class="site-container">
            {% block content %}
                {# Child templates will override this block #}
            {% endblock %}
        </div>
    </main>

    {# Footer #}
    <footer class="site-footer">
        <div class="site-container">
            <p>&copy; {{ "now"|date("Y") }} {{ site.name }}. All rights reserved.</p>
            <p>Exploring the quantum nature of consciousness.</p>
        </div>
    </footer>

    {{ wp_footer() }}
</body>
</html>
